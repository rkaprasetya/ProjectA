<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="@string/search"
            android:textSize="20sp"
            android:textColor="@color/blue"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_search_friend"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_search_friend" android:hint="@string/input_phone_number"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_friend" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    <Button
            android:text="@string/search"
            android:background="@drawable/btn_round_blue"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn_search_search"
            app:layout_constraintTop_toBottomOf="@+id/et_search_friend" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:text="@string/result"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_search_result"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="343dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="41dp" app:layout_constraintTop_toBottomOf="@+id/btn_search_search"/>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_result"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/rl_search_result">
        <TextView
                android:text="@string/dummy_result"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_search_name"
        />
        <ImageButton
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_add_circle_black_24dp"
                android:background="@color/fui_transparent"
                android:id="@+id/btn_add_friend"
                android:contentDescription="@string/button_add"/>
    </RelativeLayout>
    <Button
            android:text="@string/close"
            android:background="@drawable/btn_round_blue"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search_close"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_search_result"/>
</androidx.constraintlayout.widget.ConstraintLayout>